{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "DeskHive",
  "version": "0.3.0",
  "identifier": "com.iamlzy.deskhive",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "DeskHive桌面助手",
        "width": 300,
        "height": 420,
        "resizable": false,
        "fullscreen": false,
        "decorations": false,
        "alwaysOnTop": false,
        "visible": false,
        "skipTaskbar": true,
        "transparent": false,
        "focus": true
      },
      {
        "label": "settings",
        "title": "设置",
        "width": 800,
        "height": 600,
        "resizable": false,
        "fullscreen": false,
        "decorations": false,
        "alwaysOnTop": false,
        "visible": false,
        "skipTaskbar": false,
        "transparent": false,
        "center": true,
        "url": "settings.html"
      }
    ],

    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "msi",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "../public/**/*"
    ]
  }
}