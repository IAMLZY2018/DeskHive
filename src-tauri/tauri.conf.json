{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "deskhive",
  "version": "0.1.0",
  "identifier": "com.tauri.dev",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Todo 桌面助手",
        "width": 300,
        "height": 420,
        "x": 100,
        "y": 100,
        "resizable": false,
        "fullscreen": false,
        "alwaysOnBottom": false,
        "skipTaskbar": true,
        "decorations": false,
        "transparent": true,
        "focus": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
